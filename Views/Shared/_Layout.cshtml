﻿
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Assessment</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light  border-bottom box-shadow mb-3" style="background-color: #e3f2fd;>
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Training Tracker</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <ul class="navbar-nav flex-grow-1">

                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>

                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                View Data
                            </a>
                            <div class="dropdown-menu" aria-labelledby="View Data">

                                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="ViewAllUsers">View Users</a>
                                <div class="dropdown-divider"></div>
                                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="ViewAllTrainings">View Trainings</a>
                                <div class="dropdown-divider"></div>
                                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="ViewEnrollments">View Enrollments</a>
                            </div>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Add Data
                            </a>
                            <div class="dropdown-menu" aria-labelledby="Add Data">

                                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="RegisterUser">Add User</a>
                                <div class="dropdown-divider"></div>
                                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="RegisterTraining">Add Training</a>
                                <div class="dropdown-divider"></div>
                                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="AddEnrollments">Add Enrollments</a>
                            </div>
                        </li>
                    </ul>
                </div>

                @if (ViewBag.LoginStatus == 4)
                {
                    <div class="inline my-2">
                        <a class="nav-link text-dark mx-2" asp-area="" asp-controller="Home" asp-action="RegisterUser">New? Register</a>
                    </div>
                    <div class="inline my-2 ">
                        <a class="text-dark" asp-area="" asp-controller="Home" asp-action="Login">
                            <button type="button" class="btn btn-success" style="width: 80px;">Login</button>
                        </a>
                    </div>
                }
                else
                {
                    <div class="inline my-2">
                        <a class="nav-link text-dark mx-1">Welcome, @ViewBag.UserName</a>
                    </div>
                    <div class="inline my-2 mx-1">
                        <a class="text-dark" href="@Url.Action("UserDashboard","Home",new{@Uid = @ViewBag.UserID})">
                            <button type="button" class="btn btn-warning" style="width: 100px;">Dashboard</button>
                        </a>
                    </div>
                    <div class="inline my-2">
                        <a class="text-dark" asp-area="" asp-controller="Home" asp-action="Logout">
                            <button type="button" class="btn btn-danger" style="width: 100px;">Logout</button>
                        </a>
                    </div>
                }

            </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - MVCAssignment Build by Pulkit Tyagi- <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>