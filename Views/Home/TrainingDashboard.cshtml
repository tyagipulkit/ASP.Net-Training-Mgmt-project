﻿@{
    ViewData["Title"] = "Training Dashboard";
    TrainingModel training = ViewBag.TrainingDetails;
    List<UserModel> UserData = ViewBag.UserData;
}

<div class="text-center">
    <h1 class="display-4">Welcome @ViewBag.UserName</h1>

</div>

<div class="container mt-5">
    <h1 class="text-center mb-4">Training Dashboard</h1>
    <div class="row mb-4">
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">User Details</h5>
                    <p class="card-text"><strong>Training ID :</strong> @training.Tid</p>
                    <p class="card-text"><strong>Training Name :</strong>@training.TrainingName</p>
                    <p class="card-text"><strong>Created Date :</strong> @training.CreatedDate</p>
                    <p class="card-text"><strong>Department :</strong> @training.Department</p>
                    <p class="card-text"><strong>Training Modes :</strong>@training.TrainingModes</p>
                    <p class="card-text"><strong>Training Status :</strong> @training.TrainingStatus</p>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Irrerversable Action:</h5>
                    <p class="card-text" style="width: 150px;"><strong>Edit Training Details:</strong> 
                        <a class="text-dark" href="@Url.Action("EditTrainingPage","Home",new{@Tid = training.Tid})">
                            <button type="button" class="btn btn-primary" style="width: 120px;">Edit #@training.Tid</button>
                        </a>
                        </p>
                    <p class="card-text" style="width: 150px;"><strong>Delete Training:</strong> 
                       <a class="text-dark" href="@Url.Action("DeleteTraining","Home",new{@Tid = training.Tid})">
                            <button type="button" class="btn btn-primary" style="width: 120px;">Delete #@training.Tid</button>
                        </a>
                        </p>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Training Details</h5>
                    <table class="table">
                        <thead>

                            <tr>
                                <th>User ID</th>
                                <th>Full Name</th>
                                <th>Email</th>
                                <th>Role</th>
                                <th>Goto </th>
                            </tr>

                        </thead>
                        <tbody>
                            @if (UserData.Count() > 0)
                            {
                                <p> (Order by - User IDs)</p>
                                @foreach (UserModel U in UserData)
                                {
                                    <tr>
                                        <td>@U.Uid</td>
                                        <td>@U.FName @U.LName</td>
                                        <td>@U.Email</td>
                                        <td>@U.Role</td>
                                         <td>
                                            <a class="text-dark" href="@Url.Action("UserDashboard","Home",new{@Uid = U.Uid})">
                                                <button type="button" class="btn btn-primary" style="width: 120px;">DashBoard</button>
                                             </a
                                         </td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <p>No User is Enrolled in this Training Program.</p>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
