@model UserModel
@{
    ViewData["Title"] = "Register";
}

<h2 class="text-center">Register a User</h2>
<form method="post" asp-action="AddNewUser" asp-controller="Home">
    <div class="form-group row">
        <label class="col-sm-2 col-form-label">Full Name</label>
    
            <div class="col-sm-5">
            <input asp-for="FName" class="form-control" placeholder=" First name" required>
        </div>
            <div class="col-sm-5">
                <input asp-for="LName" class="form-control" placeholder=" Last name">
        </div>
        
    </div>
    
    <div class="form-group row">
        <label for="Email" class="col-sm-2 col-form-label">Email Address</label>
        <div class="col-sm-10">
            <input asp-for="Email" type="email" class="form-control" placeholder="Email Address" required>
        </div>
    </div>

    <div class="form-group row">
    <label for="Pswd" class="col-sm-2 col-form-label">PassWord</label>
    <div class="col-sm-10">
            <input asp-for="Pswd" type="password" class="form-control" placeholder="Password" id="typepass" required>
            <input type="checkbox" onclick="Toggle()">
            Show Password
    </div>
    </div>

    <div class="form-group row">
        <label class="col-sm-2 col-form-label" for="exampleFormControlSelect1">Select Department</label>
        <div class="col-sm-10">
            <select asp-for="Role" class="form-control">
            <option>Trainee</option>
            <option>Trainer</option>
            
        </select>
        </div>
    </div>
    
    
    <div class= "text-center">
        <button type="submit" class="btn btn-primary text-center">Add to DataBase</button>
    </div>
    

</form>
<script>
    function Toggle() {
        let temp = document.getElementById("typepass");

        if (temp.type === "password") {
            temp.type = "text";
        }
        else {
            temp.type = "password";
        }
    }
</script>