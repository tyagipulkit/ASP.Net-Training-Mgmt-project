@model UserModel
@{
    ViewData["Title"] = "Edit User Profile";

    UserModel user = ViewBag.UserDetails;
}


<h2 class="text-center">@ViewData["Title"]</h2>
<form method="post" asp-action="EditUser" asp-controller="Home">
    <div class="form-group row">
        <label for="Email" class="col-sm-2 col-form-label">User ID</label>
        <div class="col-sm-10">
            <input asp-for="Uid" value="@user.Uid" class="form-control" placeholder="User ID" readonly >
        </div>
    </div>
    <div class="form-group row">
        <label class="col-sm-2 col-form-label">Full Name</label>

        <div class="col-sm-5">
            <input asp-for="FName" value="@user.FName" class="form-control" placeholder=" First name" required>
        </div>
        <div class="col-sm-5">
            <input asp-for="LName" value="@user.LName" class="form-control" placeholder=" Last name">
        </div>

    </div>

    <div class="form-group row">
        <label for="Email" class="col-sm-2 col-form-label">Email Address</label>
        <div class="col-sm-10">
            <input asp-for="Email" value="@user.Email" type="email" class="form-control" placeholder="Email Address" required>
        </div>
    </div>

    <div class="form-group row">
        <label for="Pswd" class="col-sm-2 col-form-label">PassWord</label>
        <div class="col-sm-10">
            <input asp-for="Pswd" type="password" value="@user.Pswd" class="form-control" id="typepass" placeholder="Password" required>
          
            <input type="checkbox" onclick="Toggle()">
            Show Password

            
        </div>
    </div>

    <div class="form-group row">
        <label class="col-sm-2 col-form-label" for="exampleFormControlSelect1">Select Department</label>
        <div class="col-sm-10">
            <select asp-for="Role" class="form-control">
                @if (ViewBag.LoginStatus == 1)
                {
                <option>Admin</option>
                <option>Trainer</option>
                <option>Trainee</option>
                }
                else if(ViewBag.LoginStatus == 2)
                {
                <option>Trainee</option>
                <option>Trainer</option>
                }
                else
                {
                <option selected>Trainee</option>
                
                }
                
            </select>
        </div>
    </div>


    <div class="text-center">
        <button type="submit" class="btn btn-primary text-center">Confirm Edits</button>
    </div>


</form>
<script>
    function Toggle() {
        let temp = document.getElementById("typepass");

        if (temp.type === "password") {
            temp.type = "text";
        }
        else {
            temp.type = "password";
        }
    }
</script>